<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#8c8c8c"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textSize="50sp"
        android:textColor="#a00000"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:text="Watchdog MT" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:text="Read Status"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/button1"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"
            android:background="@drawable/material_button_grey"
            android:elevation="2dp"
            android:textColor="#ffffff"
            android:onClick="status"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/button2"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/material_button_grey"
            android:elevation="2dp"
            android:textSize="15sp"
            android:onClick="local"
            android:text="Make Local Input Changes"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button3"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/material_button_grey"
            android:elevation="2dp"
            android:textSize="15sp"
            android:onClick="modbus"
            android:text="Make Modbus Changes"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button4"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="@drawable/material_button_grey"
            android:elevation="2dp"
            android:textSize="15sp"
            android:onClick="settings"
            android:text="Settings"
            android:textColor="#ffffff" />
    </LinearLayout>
</RelativeLayout>